package com.liiwin.main;

import java.rmi.RemoteException;

import javax.naming.Context;
import javax.naming.InitialContext;
import javax.naming.NamingException;

import com.liiwin.service.IService;
import com.liiwin.service.impl.ServiceImpl;

public class ServerMain {
	public static void main(String[] args) {
		try {
			IService service = new ServiceImpl("service");
			Context context = new InitialContext();
			context.rebind("rmi://127.0.0.1:8091/service", service);
			System.out.println("服务器向命名表注册了远程服务对象");
		} catch (RemoteException e) {
			e.printStackTrace();
		} catch (NamingException e) {
			e.printStackTrace();
		}
	}
}
